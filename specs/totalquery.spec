# Model
model:
  rest_name: totalquery
  resource_name: totalqueries
  entity_name: TotalQuery
  package: logserv
  group: core/log
  description: Provide counts of various statistics on firewall logs.

# Attributes
attributes:
  v1:
  - name: firewallName
    description: The NGFW name.
    type: string
    exposed: true
    stored: true
    required: true
    example_value: firewall1

  - name: total
    description: The count of the specified type.
    type: integer
    exposed: true
    read_only: true
    autogenerated: true

  - name: totalType
    description: The type of field to get stats for.
    type: enum
    exposed: true
    required: true
    allowed_choices:
    - Traffic
    - IngressBytes
    - EgressBytes
    - ThreatsDetected
    - ThreatsBlocked
    example_value: Traffic

  - name: useCacheOnly
    description: |-
      Fastest response time, and cheapest. Only use cached snapshot data, and estimate
      fractional hours at the ends of the time range.
    type: boolean
    exposed: true
    default_value: true
