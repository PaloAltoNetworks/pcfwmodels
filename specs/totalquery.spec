# Model
model:
  rest_name: totalquery
  resource_name: totalqueries
  entity_name: TotalQuery
  package: logserv
  group: core/log
  description: Provide counts of various statistics on firewall logs.

# Attributes
attributes:
  v1:
  - name: estimationToken
    description: |-
      If set by the callee, then the result is estimated. The caller should call again
      to get accurate results. If set by the caller, then the callee should return
      accurate results.
    type: string
    exposed: true

  - name: total
    description: The count of the specified type.
    type: integer
    exposed: true
    read_only: true
    autogenerated: true

  - name: totalType
    description: The type of field to get stats for.
    type: enum
    exposed: true
    required: true
    allowed_choices:
    - Traffic
    - IngressBytes
    - EgressBytes
    - ThreatsDetected
    - ThreatsBlocked
    example_value: Traffic
